[Unit]
Description=DCI Agent for Openshift

[Service]
Type=oneshot
WorkingDirectory=/usr/share/dci-openshift-agent
EnvironmentFile=/etc/dci-openshift-agent/dcirc.sh
ExecStart=-/usr/bin/ansible-playbook -v /usr/share/dci-openshift-agent/dci-openshift-agent.yml -e @/etc/dci-openshift-agent/settings.yml
SuccessExitStatus=0
User=dci-openshift-agent

[Install]
WantedBy=default.target
